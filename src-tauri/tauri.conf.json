{
  "build": {
    "beforeBuildCommand": "npm run build && npm run export",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "Raspirus",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.raspirus.dev",
      "longDescription": "Hash based Virusscanner to scan USB drives",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Lightweight hash-based virusscanner",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "cli": {
      "description": "This is a description",
      "longDescription": "This description is longer",
      "beforeHelp": "Before the HELP", 
      "afterHelp": "After the HELP", 
      "args": [
        {
          "name": "scanfile",
          "short": "s",
          "takesValue": true
        },
        {
          "name": "scanfolder",
          "short": "f",
          "takesValue": true
        }
      ],
      "subcommands": {
        "database": {
          "args": [
            {
              "name": "update",
              "short": "u",
              "takesValue": false
            },
            {
              "name": "rebuild",
              "short": "r",
              "takesValue": false
            },
            {
              "name": "setpath",
              "short": "p",
              "takesValue": true
            }
          ]
        }
      }
    }
  }
}
